# Configurações do Servidor
PORT=5000
NODE_ENV=development

# Nome e URL base da aplicação
APP_NAME=WorkMatch
API_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# Configuração do CORS (importante para comunicação com React)
CORS_ORIGIN=http://localhost:3000

# Database (PostgreSQL)
DATABASE_URL=postgres://seu_usuario:sua_senha@localhost:5432/workmatch_db

# Autenticação / JWT (importante para login/autenticação)
JWT_SECRET=seu_jwt_secret_muito_seguro_aqui
JWT_EXPIRATION=7d

# Rate Limiting (proteção contra excesso de requisições)
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Upload de arquivos (se necessário)
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=5242880

# E-mail (para recuperação de senha, confirmações, etc)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=seu_email@gmail.com
EMAIL_PASS=sua_senha_do_app_gmail
EMAIL_FROM="WorkMatch <noreply@workmatch.com>"

# Logs
LOG_LEVEL=debug

# Variáveis específicas da aplicação
MAX_ITEMS_PER_PAGE=10
SESSION_SECRET=outro_segredo_muito_seguro_aqui
