# ===========================
# Configurações do Servidor
# ===========================
PORT=5000
NODE_ENV=development

# Nome e URL base da aplicação
APP_NAME=WorkMatch
API_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# Configuração do CORS (importante para comunicação com React)
CORS_ORIGIN=http://localhost:3000

# ===========================
# Database (MongoDB)
# ===========================
# Local
MONGO_URI=mongodb://127.0.0.1:27017/workmatch_db

# Caso use MongoDB Atlas, substitua acima por algo como:
# MONGO_URI=mongodb+srv://usuario:senha@cluster0.mongodb.net/workmatch_db?retryWrites=true&w=majority

# ===========================
# Autenticação / JWT
# ===========================
JWT_SECRET=seu_jwt_secret_muito_seguro_aqui
JWT_EXPIRATION=7d

# ===========================
# Rate Limiting
# ===========================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# ===========================
# Upload de arquivos
# ===========================
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=5242880

# ===========================
# E-mail
# ===========================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=seu_email@gmail.com
EMAIL_PASS=sua_senha_do_app_gmail
EMAIL_FROM="WorkMatch <noreply@workmatch.com>"

# ===========================
# Logs
# ===========================
LOG_LEVEL=debug

# ===========================
# Variáveis específicas
# ===========================
MAX_ITEMS_PER_PAGE=10
SESSION_SECRET=outro_segredo_muito_seguro_aqui
