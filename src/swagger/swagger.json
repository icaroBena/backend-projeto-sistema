{
  "openapi": "3.0.0",
  "info": {
    "title": "WorkMatch API",
    "description": "API do sistema WorkMatch para conectar prestadores de serviço e clientes",
    "version": "1.0.0",
    "contact": {
      "name": "Equipe WorkMatch",
      "email": "contato@workmatch.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Servidor de desenvolvimento"
    }
  ],
  "tags": [
    {
      "name": "Auth",
      "description": "Endpoints de autenticação"
    },
    {
      "name": "Users",
      "description": "Operações relacionadas a usuários"
    },
    {
      "name": "Serviços",
      "description": "Operações relacionadas a serviços"
    },
    {
      "name": "Propostas",
      "description": "Operações relacionadas a propostas"
    },
    {
      "name": "Pagamentos",
      "description": "Operações relacionadas a pagamentos"
    },
    {
      "name": "Verificação",
      "description": "Operações relacionadas a verificação de usuários"
    },
    {
      "name": "Notificações",
      "description": "Operações relacionadas a notificações"
    },
    {
      "name": "Categorias",
      "description": "Operações relacionadas a categorias de serviço"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "format": "ObjectId"
          },
          "nome": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "senha": {
            "type": "string",
            "format": "password"
          },
          "cpf": {
            "type": "string",
            "pattern": "^\\d{11}$"
          },
          "tipo": {
            "type": "string",
            "enum": ["cliente", "prestador"]
          },
          "verificado": {
            "type": "boolean",
            "default": false
          },
          "dataCriacao": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["nome", "email", "senha", "cpf", "tipo"]
      },
      "Servico": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "format": "ObjectId"
          },
          "titulo": {
            "type": "string"
          },
          "descricao": {
            "type": "string"
          },
          "categoriaId": {
            "type": "string",
            "format": "ObjectId"
          },
          "cliente": {
            "type": "string",
            "format": "ObjectId"
          },
          "status": {
            "type": "string",
            "enum": ["aberto", "em_andamento", "concluido", "cancelado"]
          },
          "localServico": {
            "type": "object",
            "properties": {
              "tipo": {
                "type": "string",
                "enum": ["remoto", "presencial"]
              },
              "endereco": {
                "type": "object",
                "properties": {
                  "rua": { "type": "string" },
                  "numero": { "type": "string" },
                  "complemento": { "type": "string" },
                  "bairro": { "type": "string" },
                  "cidade": { "type": "string" },
                  "estado": { "type": "string" },
                  "cep": { "type": "string" }
                }
              }
            }
          },
          "dataCriacao": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["titulo", "descricao", "categoriaId", "cliente", "localServico"]
      },
      "Proposta": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "format": "ObjectId"
          },
          "servico": {
            "type": "string",
            "format": "ObjectId"
          },
          "prestador": {
            "type": "string",
            "format": "ObjectId"
          },
          "valor": {
            "type": "number"
          },
          "prazoEntrega": {
            "type": "number"
          },
          "descricao": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["pendente", "aceita", "recusada"]
          },
          "motivoRecusa": {
            "type": "string"
          },
          "dataCriacao": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["servico", "prestador", "valor", "prazoEntrega", "descricao"]
      },
      "Pagamento": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "format": "ObjectId"
          },
          "proposta": {
            "type": "string",
            "format": "ObjectId"
          },
          "valor": {
            "type": "number"
          },
          "status": {
            "type": "string",
            "enum": ["pendente", "processando", "aprovado", "recusado", "estornado"]
          },
          "metodoPagamento": {
            "type": "string",
            "enum": ["cartao", "pix"]
          },
          "dataCriacao": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["proposta", "valor", "metodoPagamento"]
      },
      "Verificacao": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "format": "ObjectId"
          },
          "usuario": {
            "type": "string",
            "format": "ObjectId"
          },
          "documentos": {
            "type": "object",
            "properties": {
              "identidade": {
                "type": "string"
              },
              "comprovanteResidencia": {
                "type": "string"
              },
              "antecedentes": {
                "type": "string"
              }
            }
          },
          "telefone": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["pendente", "aprovada", "rejeitada"]
          },
          "motivoRejeicao": {
            "type": "string"
          },
          "dataCriacao": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["usuario", "documentos", "telefone"]
      },
      "Notificacao": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "format": "ObjectId"
          },
          "usuario": {
            "type": "string",
            "format": "ObjectId"
          },
          "titulo": {
            "type": "string"
          },
          "mensagem": {
            "type": "string"
          },
          "tipo": {
            "type": "string",
            "enum": ["proposta", "servico", "pagamento", "verificacao"]
          },
          "lida": {
            "type": "boolean",
            "default": false
          },
          "dataCriacao": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["usuario", "titulo", "mensagem", "tipo"]
      },
      "Categoria": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "format": "ObjectId"
          },
          "nome": {
            "type": "string"
          },
          "descricao": {
            "type": "string"
          },
          "icone": {
            "type": "string"
          }
        },
        "required": ["nome"]
      },
      "Error": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          },
          "errors": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "msg": {
                  "type": "string"
                },
                "param": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "paths": {
    "/api/auth/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "Registrar novo usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário registrado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "$ref": "#/components/schemas/User"
                    },
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Dados inválidos",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Autenticar usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "senha": {
                    "type": "string"
                  }
                },
                "required": ["email", "senha"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login realizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "$ref": "#/components/schemas/User"
                    },
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Credenciais inválidas",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/servicos": {
      "get": {
        "tags": ["Serviços"],
        "summary": "Listar serviços",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "query",
            "name": "status",
            "schema": {
              "type": "string",
              "enum": ["aberto", "em_andamento", "concluido", "cancelado"]
            }
          },
          {
            "in": "query",
            "name": "categoriaId",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de serviços",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Servico"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Serviços"],
        "summary": "Criar novo serviço",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Servico"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Serviço criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Servico"
                }
              }
            }
          },
          "400": {
            "description": "Dados inválidos",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/servicos/{id}": {
      "parameters": [
        {
          "in": "path",
          "name": "id",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ],
      "get": {
        "tags": ["Serviços"],
        "summary": "Obter detalhes de um serviço",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Detalhes do serviço",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Servico"
                }
              }
            }
          },
          "404": {
            "description": "Serviço não encontrado"
          }
        }
      },
      "put": {
        "tags": ["Serviços"],
        "summary": "Atualizar serviço",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Servico"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Serviço atualizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Servico"
                }
              }
            }
          },
          "404": {
            "description": "Serviço não encontrado"
          }
        }
      }
    }
  }
}